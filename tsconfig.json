{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jasmine"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "compileOnSave": false,
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!node_modules/**",
    "!npm/**"
  ],
  "exclude": [
    "src/main.ts",
    "node_modules",
    "e2e",
    "npm",
    "**/*.spec.ts",
    "**/*-test.component.ts",
    "wallabyTest.ts"
  ]
}